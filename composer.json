{
    "name": "jcrowe/bad-word-filter",
    "description": "PHP Bad word filtering. Checks for the existence of a bad word in a string or array.",
    "license": "MIT",
    "authors": [
        {
            "name": "Jonathan Crowe",
            "email": "jcrowe206@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/contracts": "^8.73"
    },
    "require-dev": {
        "nunomaduro/collision": "^5.10",
        "nunomaduro/larastan": "^1.0",
        "orchestra/testbench": "^6.22",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        
        "psr-4": {
            "JCrowe\\BadWordFilter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JCrowe\\BadWordFilter\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "JCrowe\\BadWordFilter\\Providers\\BadWordFilterServiceProvider"
            ],
            "aliases": {
                "BadWordFilter": "JCrowe\\BadWordFilter\\Facades\\BadWordFilter"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
